+resolve_helper() {
+    local binary="$1"
+    shift
+
+    for candidate in "$@"; do
+        if [ -x "$candidate" ]; then
+            echo "$candidate"
+            return 0
+        fi
+    done
+
+    if command -v "$binary" >/dev/null 2>&1; then
+        command -v "$binary"
+        return 0
+    fi
+
+    return 1
