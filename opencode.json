{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "github": {
      "command": [
        "/nix/store/j40kswmhshbfr1vs39cfb5jpc08b8f4f-github-mcp-server-0.25.0/bin/github-mcp-server"
      ],
      "enabled": true,
      "type": "local"
    },
    "nix-language-server": {
      "command": [
        "/nix/store/xraaxsj9ma2vswpyg8d18m6fq1phw4lv-mcp-language-server-0.1.1/bin/mcp-language-server",
        "--workspace",
        "/per/etc/nixos",
        "--lsp",
        "nixd"
      ],
      "enabled": true,
      "type": "local"
    },
    "nixos": {
      "command": [
        "/nix/store/qypikw22jxnpnfik4m1z489d7anqw1sr-mcp-nixos-1.0.3/bin/mcp-nixos"
      ],
      "enabled": true,
      "type": "local"
    }
  },
  "theme": "stylix"
}
